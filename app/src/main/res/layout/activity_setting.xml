<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="#000000"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <cn.sft.view.UPloadVerifyPicView
        android:id="@+id/sss"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ff0000"
        app:backgroundResource="@mipmap/ic_launcher"></cn.sft.view.UPloadVerifyPicView>

    <cn.sft.view.AlwaysMarqueeTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/main_bottom_radiobutton_info_selector"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/main_bottom_radiobutton_vehicle_selector"
        android:gravity="center_vertical"
        android:text="ceshi"
        app:drawableHeight="20dp"
        app:drawableTextCenter="true"
        app:drawableWidth="20dp"
        app:leftDrawableHeight="30dp"
        app:leftDrawableWidth="30dp" />

    <cn.sft.view.DropDownMenu
        android:id="@+id/mDropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:ddmenuIsWrap="true"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/main_bottom_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="horizontal">

        <cn.sft.view.DrawableCenterRadioButton
            android:id="@+id/main_fragment_btn"
            style="@style/Main_BottomLayout_RadioButton_Style"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/main_bottom_radiobutton_vehicle_selector"
            android:text="车辆"
            app:drawableHeight="30dp"
            app:drawableTextCenter="true"
            app:drawableWidth="30dp" />

        <cn.sft.view.DrawableCenterRadioButton
            android:id="@+id/infomation_fragment_btn"
            style="@style/Main_BottomLayout_RadioButton_Style"
            android:background="#00ffff"
            android:drawableLeft="@drawable/main_bottom_radiobutton_info_selector"
            android:drawablePadding="0dp"
            android:text="信息"
            app:drawableHeight="10dp"
            app:drawableTextCenter="true"
            app:drawableWidth="10dp" />

        <cn.sft.view.DrawableCenterRadioButton
            android:id="@+id/order_fragment_btn"
            style="@style/Main_BottomLayout_RadioButton_Style"
            android:background="#333333"
            android:drawablePadding="0dp"
            android:drawableRight="@drawable/main_bottom_radiobutton_order_selector"
            android:text="订单"
            app:drawableHeight="15dp"
            app:drawableTextCenter="true"
            app:drawableWidth="15dp" />

        <cn.sft.view.DrawableCenterRadioButton
            android:id="@+id/my_fragment_btn"
            style="@style/Main_BottomLayout_RadioButton_Style"
            android:drawableBottom="@drawable/main_bottom_radiobutton_my_selector"
            android:drawablePadding="0dp"
            android:text="我的"
            app:drawableHeight="10dp"
            app:drawableTextCenter="true"
            app:drawableWidth="30dp" />
    </RadioGroup>

</LinearLayout>
